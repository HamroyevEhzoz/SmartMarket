<Window x:Class="SmartMarket.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMarket.WPF"
        mc:Ignorable="d"
        Title="Smart Market" Height="450" Width="800">
   
    <Grid Background="AntiqueWhite">

        <StackPanel Background="Bisque" Width="300">

            <Label Name="Title" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" >Home</Label>

            <Button Name="AddProductButton"
                    Width="150"
                    Height="20"
                    BorderBrush="Silver"
                    BorderThickness="2"
                    FontWeight="Black"
                    Margin="15"
                    Click="AddProductButton_Click">
                Add Product
            </Button>
            
            <Button x:Name="BuyProductButton"
                    Width="150"
                    Height="20"
                    Click="BuyProductButton_Click"
                    Content="Buy Product"
                    BorderBrush="Silver"
                    BorderThickness="2"
                    FontWeight="Black"
                    Margin="20"/>


        </StackPanel>
        
    </Grid>
    
</Window>
